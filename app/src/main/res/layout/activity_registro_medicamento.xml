<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/azulplc"
    tools:context=".RegistroMedicamento">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro Medicamentos"
        android:textColor="@color/black"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.237" />

    <EditText
        android:id="@+id/edhora"
        android:layout_width="125dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="text"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="381dp" />

    <EditText
        android:id="@+id/edfecha"
        android:layout_width="126dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="text"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="317dp" />

    <Button
        android:id="@+id/buhora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="375dp" />

    <Button
        android:id="@+id/bufecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="316dp" />

    <EditText
        android:id="@+id/eMedicamento"
        android:layout_width="255dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="text"
        android:text="Medicamento a suministrar"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="487dp" />

</androidx.constraintlayout.widget.ConstraintLayout>